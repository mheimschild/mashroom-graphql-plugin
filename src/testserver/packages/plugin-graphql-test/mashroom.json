{
  "$schema": "https://www.mashroom-server.com/schemas/mashroom-plugins.json",
  "devModeBuildScript": "build",
  "plugins": [
    {
      "name": "Mashroom GraphQL Local Echo Plugin",
      "type": "mashroom-graphql-plugin",
      "bootstrap": "./dist/bootstrap_local.js",
      "defaultConfig": {
        "pubSub": "memory"
      }
    },
    {
      "name": "Mashroom GraphQL Remote Echo Plugin",
      "type": "mashroom-graphql-plugin",
      "bootstrap": "./dist/bootstrap_remote.js",
      "defaultConfig": {
        "pubSub": "memory"
      }
    }
  ]
}
